@model IEnumerable<IEXTrading.Models.Headline>

@{
    ViewData["Title"] = "GetHeadlines";
}

<h2>Get Headlines</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                Source
            </th>
            <th>
                Summary
            </th>
            <th>
                Datetime
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.source)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.summary)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.datetime)
                </td>
            </tr>
        }
    </tbody>
</table>